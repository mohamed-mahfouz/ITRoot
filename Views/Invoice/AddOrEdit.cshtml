
@model AddProduct

 @{
     Layout = "_PartialLayout";
 }
 

@using (Html.BeginForm("AddOrEdit","Invoice",FormMethod.Post))
{
    @Html.HiddenFor(model => model.InvoiceId)
    <div class="form-group">
        @Html.LabelFor(m => m.Product ,new {@class = "control-label"})
        @Html.EditorFor(m => m.Product, new {htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary">
        <input type="reset" value="Reset" class = "btn btn-warning">
    </div>
    
}

 
@section Scripts{
    
<script>
    $(document).ready(function(){
      $("#Product").autocomplete({
        source: '@Url.Action("GetProducts","Invoice")',
        minLength: 2
      });       
    });

</script>
}